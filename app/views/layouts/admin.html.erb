<!doctype html>
<html lang="en" class="no-js">
<head>
  <title>adoptame.mx</title>
  <meta charset="utf-8">
  <%= csrf_meta_tags %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "bootstrap", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "magnific-popup", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "font-awesome", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "flexslider", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "style", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "responsive", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
</head>
<body>
  <!-- Container -->
  <div id="container">
    <%= render "shared/flash", :locals => {:flash => flash} %>
    <!-- Header -->
    <header>
      <div class="logo-box">
        <a class="logo" href="#"><%= image_tag(asset_path('logo1.png')) %></a>
        <p class="slogan">adoptame.mx</p>
        <hr>
        <p>&larr; <%= link_to t("global.authentication.close_session"), close_session_path, :method => :get %></p>
      </div>
      <a class="elemadded responsive-link" href="#">Menu</a>
      <div class="menu-box">
        <ul class="menu">
          <%= menu_for_account_type %>
        </ul>
      </div>
      <p class="copyright">&#169; <%= Time.now.year %> adoptame.mx</p>
    </header>
    <!-- End Header -->
    <!-- content -->
    <div id="content">
      <div class="inner-content">
        <div class="services-page">
          <div class="services-box">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <!-- End content -->
  </div>
  <!-- End Container -->
  <div class="preloader">
    <%= image_tag(asset_path('preloader.gif')) %>
  </div>
  <%= javascript_include_tag "jquery.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.migrate", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.imagesloaded.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.isotope.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.magnific-popup.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.flexslider", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "retina-1.1.0.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.nicescroll.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "script", "data-turbolinks-track" => true %>
</body>
</html>
